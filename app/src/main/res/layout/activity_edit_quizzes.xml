<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_quizzes"
    android:background="@color/solitude">



        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="Update Quiz"
                android:textColor="@color/picton_blue"
                android:textSize="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/raleway_medium"
                    android:gravity="center"
                    android:text="Quiz Name"
                    android:textColor="@color/picton_blue"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/UpdateQname"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:paddingVertical="8dp"
                    android:text="quiz 1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/raleway_medium"
                    android:gravity="center"
                    android:text="Time Duration(min)"
                    android:textColor="@color/picton_blue"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/UpdateQtime"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:paddingVertical="8dp"
                    android:text="120" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway_medium"
                android:padding="8dp"
                android:text="Description"
                android:textColor="@color/picton_blue"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/UpdateQdescription"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:paddingVertical="8dp"
                android:text="Pleace do this quiz before next week" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="399dp"
        android:layout_height="79dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/layout">

        <Button
            android:layout_width="178dp"
            android:layout_height="79dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button5"
            android:fontFamily="@font/raleway_medium"
            android:padding="15dp"
            android:text="update"
            android:textSize="28dp"
            android:textColor="@color/White"/>

        <Button
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button5"
            android:fontFamily="@font/raleway_medium"
            android:padding="15dp"
            android:textColor="@color/White"
            android:text="Delete"
            android:textSize="28dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>