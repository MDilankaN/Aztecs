<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:padding="8dp"
            android:text="MCQ 01"
            android:textColor="@color/picton_blue"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/delete_mcq"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_close"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="3.5dp"
            />

    </LinearLayout>


    <EditText
        android:id="@+id/quetion"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:background="@drawable/edit_text"
        android:hint="Question"
        android:inputType="textImeMultiLine"
        android:padding="5dp"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/Ans1"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:background="@drawable/edit_text"
        android:hint="Answer 1"
        android:inputType="textImeMultiLine"
        android:padding="5dp"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/Ans2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:background="@drawable/edit_text"
        android:hint="Answer 2"
        android:inputType="textImeMultiLine"
        android:padding="5dp"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/Ans3"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:background="@drawable/edit_text"
        android:hint="Answer 3"
        android:inputType="textImeMultiLine"
        android:padding="5dp"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/Ans4"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:background="@drawable/edit_text"
        android:hint="Answer 4"
        android:inputType="textImeMultiLine"
        android:padding="5dp"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/raleway_medium"
            android:paddingVertical="8dp"
            android:paddingLeft="8dp"
            android:text="Correct answer's no"
            android:textColor="@color/picton_blue"
            android:textSize="22dp" />


        <Spinner
            android:id="@+id/correctAns"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginVertical="9dp"
             />


    </LinearLayout>
</LinearLayout>