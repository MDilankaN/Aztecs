<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@color/lightcolor"

    tools:context=".MainActivity">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reply_to_forum"
            android:textAlignment="center"
            android:textColor="@color/darkcolor"
            android:textSize="30dp"></TextView>


<!--    Imageview-->

    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/forumedit">

    </ImageView>

<!--    Vertical layput and other inner layouts begin-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/scrollview"
        android:orientation="vertical"
        android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </Space>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:fontFamily="@font/raleway_semibold"
            android:text="@string/imgstudent_id"
            android:textColor="@color/lightcolor"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="22">

        </Space>

        <EditText
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:background="@drawable/inputid">

        </EditText>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3">

        </Space>

<!--    End of the first horizontal linear layout-->
    </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:background="@drawable/forumview"
            android:textSize="25dp"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/color2">

        </TextView>
<!--        Second horizontal layout begins-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </Space>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/btnreply"
                android:textColor="@color/lightcolor"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="22">

            </Space>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/txtdate"
                android:textColor="@color/lightcolor"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10">

            </Space>

            <EditText
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/inputid">

            </EditText>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3">

            </Space>

            <!--    End of the second horizontal linear layout-->
        </LinearLayout>

<!--        Teacher reply view-->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:background="@drawable/forumview"
            android:textSize="25dp"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/color2">

        </TextView>



        <!--        End of the vertical layout-->
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3">

    </Space>

    <!--Back & submit button include horizontal leanear layout begins-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="30dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backbtn">

        </Button>

        <Space
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:layout_weight="2">

        </Space>


        <Button
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:background="@drawable/submitbtn"
            android:layout_marginRight="10dp">

        </Button>
    </LinearLayout>

    <!--    Layout5-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:background="@color/darkcolor">


        <Button
            android:id="@+id/btn_navi1"
            android:layout_width="171dp"
            android:layout_height="match_parent"
            android:background="@drawable/classroom">

        </Button>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </Space>

        <Button
            android:id="@+id/btn_navi2"
            android:layout_width="87dp"
            android:layout_height="30dp"
            android:background="@drawable/news">

        </Button>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </Space>

        <Button
            android:id="@+id/btn_navi3"
            android:layout_width="101dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/profile">

        </Button>



    </LinearLayout>














</androidx.appcompat.widget.LinearLayoutCompat>