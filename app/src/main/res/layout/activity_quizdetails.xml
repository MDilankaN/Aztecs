<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizDetails"
    android:background="@drawable/newbackground1">


    <ImageView
        android:id="@+id/BackBT"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backbutton" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:padding="23dp"
            android:text="Enter quiz details"
            android:textColor="@color/White"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/raleway_medium"
                android:gravity="center"
                android:text="Quiz Name"
                android:textColor="@color/picton_blue"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/ETQuizName"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:background="@drawable/edit_text"
                android:gravity="center"
                android:alpha="0.5"
                android:inputType="textPersonName"
                android:paddingVertical="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="32dp"
                android:fontFamily="@font/raleway_medium"
                android:gravity="center"
                android:text="Time Duration(min)"
                android:textColor="@color/picton_blue"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/ETQuizTime"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text"
                android:gravity="center"
                android:inputType="text"
                android:alpha="0.5"
                android:paddingVertical="8dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway_medium"
            android:padding="8dp"
            android:text="Description"
            android:textColor="@color/picton_blue"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/ETQuizDescription"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:alpha="0.5"
            android:inputType="textMultiLine"
            android:padding="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/QuizNextBt"
        android:layout_width="269dp"
        android:layout_height="99dp"
        android:background="@drawable/button5"
        android:text="next"
        android:textColor="@color/White"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />
</androidx.constraintlayout.widget.ConstraintLayout>