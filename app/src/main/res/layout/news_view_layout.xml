<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtReadNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/darklightBlue"
            android:fontFamily="@font/raleway_medium"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Sample">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUpdate1"
                android:layout_width="110dp"
                android:layout_height="37dp"
                android:background="@drawable/lightbutton"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/btnupdate_1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp">

            </Button>

            <Button
                android:id="@+id/btnDelete2"
                android:layout_width="110dp"
                android:layout_height="37dp"
                android:background="@drawable/lightbutton"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/btndelete_1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp">

            </Button>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>