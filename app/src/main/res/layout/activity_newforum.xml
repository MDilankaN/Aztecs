<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@drawable/background"

    tools:context=".addForum">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_forum"
        android:textAlignment="center"
        android:textColor="@color/darkcolor"
        android:textSize="30dp"
        android:fontFamily="@font/raleway_semibold"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Classroom code"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/raleway_medium"></TextView>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type your question below"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/raleway_semibold"></TextView>

    <!--    vertical lenear layout beging-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/scrollview"
        android:orientation="vertical"
        android:paddingTop="10dp">


        <EditText
            android:id="@+id/forum"
            android:layout_width="350dp"
            android:layout_height="172dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/linearlayout"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/color2"></EditText>


    </LinearLayout>


    <!--Back & submit button include horizontal leanear layout begins-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="30dp">


        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backbtn">

        </Button>

        <Space
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:layout_weight="2">

        </Space>


        <Button
            android:id="@+id/btn_sub"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/submitbtn">

        </Button>
    </LinearLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="20">

    </Space>


    <!--    Layout5-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:background="@color/darkcolor">


        <Button
            android:id="@+id/btn_navi1"
            android:layout_width="171dp"
            android:layout_height="match_parent"
            android:background="@drawable/classroom">

        </Button>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </Space>

        <Button
            android:id="@+id/btn_navi2"
            android:layout_width="87dp"
            android:layout_height="30dp"
            android:background="@drawable/news">

        </Button>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </Space>

        <Button
            android:id="@+id/btn_navi3"
            android:layout_width="101dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/profile">

        </Button>



    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>