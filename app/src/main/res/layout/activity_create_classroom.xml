<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/lightcolor"
    android:gravity="bottom"
    tools:context=".MainActivity">

    <!--    Layout1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Classroom"
            android:textAlignment="center"
            android:textColor="@color/darkcolor"
            android:textSize="30dp"></TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/forum1">

    </ImageView>
    <!--    Layout3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/scrollview"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <!--    Layout for classroom name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </Space>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Name"
                android:textColor="@color/lightcolor"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="22">

            </Space>

            <EditText
                android:id="@+id/EtName"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:background="@drawable/inputid">

            </EditText>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3">

            </Space>


        </LinearLayout>

        <!--    Layout for classroom code-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </Space>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Code"
                android:textColor="@color/lightcolor"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="22">

            </Space>

            <EditText
                android:id="@+id/EtCode"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:background="@drawable/inputid">

            </EditText>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3">

            </Space>


        </LinearLayout>

        <!--    Layout for classroom description -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </Space>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Description"
                android:textColor="@color/lightcolor"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="22">

            </Space>

            <EditText
                android:id="@+id/EtDes"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:background="@drawable/inputid">

            </EditText>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3">

            </Space>


        </LinearLayout>


    </LinearLayout>

    <!--    Layout for buttons -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="111dp"

            android:layout_height="30dp"
            android:background="@drawable/cancel">

        </Button>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">


        </Space>

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="111dp"

            android:layout_height="30dp"
            android:background="@drawable/create">

        </Button>
    </LinearLayout>


    <!--bottom -->

    <!--    Layout5-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:background="@color/darkcolor">


        <Button
            android:id="@+id/btn_navi1"
            android:layout_width="171dp"
            android:layout_height="match_parent"
            android:background="@drawable/selected">

        </Button>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </Space>

        <Button
            android:id="@+id/btn_navi2"
            android:layout_width="87dp"
            android:layout_height="30dp"
            android:background="@drawable/news">

        </Button>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </Space>

        <Button
            android:id="@+id/btn_navi3"
            android:layout_width="101dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/profile">

        </Button>



    </LinearLayout>




</androidx.appcompat.widget.LinearLayoutCompat>