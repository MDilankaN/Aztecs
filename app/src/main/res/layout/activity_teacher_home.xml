<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacherHome"
    android:orientation="vertical">


    <!--    Layout1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi"
            android:textAlignment="center"
            android:textColor="@color/darkcolor"
            android:textSize="30dp"></TextView>
    </LinearLayout>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/teach">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/linearlayout"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnview"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/viewupdate">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnadd"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/addcls">
            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnform"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/chkforum">
            </Button>

        </LinearLayout>

    </LinearLayout>

    <!--bottom -->

    <!--    Layout5-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:background="@color/darkcolor">


        <Button
            android:id="@+id/btn_navi1"
            android:layout_width="171dp"
            android:layout_height="match_parent"
            android:background="@drawable/selected">

        </Button>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </Space>

        <Button
            android:id="@+id/btn_navi2"
            android:layout_width="87dp"
            android:layout_height="30dp"
            android:background="@drawable/news">

        </Button>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </Space>

        <Button
            android:id="@+id/btn_navi3"
            android:layout_width="101dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/profile">

        </Button>



    </LinearLayout>





</androidx.appcompat.widget.LinearLayoutCompat>