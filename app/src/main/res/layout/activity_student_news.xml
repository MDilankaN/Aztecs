            <TextView
                android:id="@+id/txtNews4S"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittxt1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/Music_class_added_a_new_MCQ"
                android:textColor="@color/darkblue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtNews5S"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittxt1"
                android:backgroundTint="@color/lightBlue"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/math_class_added_a_new_MCQ"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtNews6S"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittxt1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/Music_class_added_a_new_MCQ"
                android:textColor="@color/darkblue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtNews7S"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittxt1"
                android:backgroundTint="@color/lightBlue"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/Music_class_added_a_new_MCQ"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtNews8S"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittxt1"
