<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/txtNewsS"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="@string/newsS"
        android:textAlignment="center"
        android:textColor="@color/darkblue"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="404dp"
        android:layout_height="187dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/imagenews"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831"
        android:contentDescription="TODO" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="403dp"
        android:layout_height="397dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:scrollbarSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNews1S"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittxt1"
                android:backgroundTint="@color/lightBlue"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/science_class_added_a_new_mcq"
                android:textColor="@color/white"
                android:textColorHighlight="#9C27B0"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtNews2S"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittxt1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/math_class_added_a_new_mcq"
                android:textColor="@color/darkblue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtNews3S"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittxt1"
                android:backgroundTint="@color/lightBlue"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/Art_class_added_a_new_MCQ"
                android:textColor="@color/white"
