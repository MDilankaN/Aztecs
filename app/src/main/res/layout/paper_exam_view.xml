<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaperExamView"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="224dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/paper_1"
                android:textAlignment="center"
                android:textColor="@color/dark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/des"
                android:textAlignment="center"
                android:textColor="@color/dark"
                android:textSize="22sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lite"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp" >

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tm"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/dark" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00:00:00"
                        android:textAlignment="viewStart"
                        android:textColor="@color/dark" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_button1"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="@string/submit"
                        android:textColor="#FFFFFF" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitelike"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtqn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Question No 01"
                        android:textAlignment="center"
                        android:textColor="@color/dark"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtqus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Question details..?"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/dark"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/Rbnm1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 1"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/Rbnm2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 2"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/Rbnm3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 3"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/Rbnm4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 4"
                            android:textSize="18sp" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtqnx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Question No 02"
                        android:textAlignment="center"
                        android:textColor="@color/dark"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtquxs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Question details..?"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/dark"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/Rbnmx1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 1"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/Rbnmx2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 2"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/Rbnmx3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 3"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/Rbnmx4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 4"
                            android:textSize="18sp" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtqnz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Question No 03"
                        android:textAlignment="center"
                        android:textColor="@color/dark"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtqusz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Question details..?"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/dark"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/Rbnm1z"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 1"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/Rbnm2z"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 2"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/Rbnm3z"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 3"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/Rbnm4z"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 4"
                            android:textSize="18sp" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtqnq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Question No 04"
                        android:textAlignment="center"
                        android:textColor="@color/dark"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtqusq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_medium"
                        android:text="Question details..?"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/dark"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/Rbnm1q"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 1"
                            android:textSize="18sp"/>

                        <RadioButton
                            android:id="@+id/Rbnm2q"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 2"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/Rbnm3q"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 3"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/Rbnm4q"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 4"
                            android:textSize="18sp"/>
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>


</LinearLayout>