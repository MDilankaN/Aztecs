<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@color/lightcolor"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_clst1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/usernameT"
        android:textColor="@color/darkcolor"
        android:textSize="25dp"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/teach" />

    <TextView
        android:id="@+id/txt_cls2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Current Classrooms"
        android:textColor="@color/darkcolor"
        android:textSize="18sp"
        android:textStyle="bold"></TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/scrollview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/linearlayout"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="30dp">

                <TextView
                    android:id="@+id/txt_clsin1"
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="@string/subject1"
                    android:textColor="@color/darkcolor"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </Space>

                <TextView
                    android:id="@+id/txt_code1"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/darkcolor"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/linearlayout"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="30dp">

                <TextView
                    android:id="@+id/txt_clsin2"
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/subject2"
                    android:textColor="@color/darkcolor"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>

                <Space
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </Space>

                <TextView
                    android:id="@+id/txt_code2"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/darkcolor"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_margin="5dp"
                android:background="@drawable/linearlayout"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="30dp">

                <TextView
                    android:id="@+id/txt_clsin3"
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="@string/subject3"
                    android:textColor="@color/darkcolor"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </Space>

                <TextView
                    android:id="@+id/txt_code3"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/darkcolor"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="174dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </Space>

        <Button
            android:id="@+id/btn_clscreate"
            android:layout_width="238dp"
            android:layout_height="35dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/createclassroom"
            android:textStyle="bold">

        </Button>


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </Space>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@color/darkcolor">


        <Button
            android:id="@+id/btn_navi1"
            android:layout_width="171dp"
            android:layout_height="match_parent"
            android:background="@drawable/selected">

        </Button>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </Space>

        <Button
            android:id="@+id/btn_navi2"
            android:layout_width="87dp"
            android:layout_height="30dp"
            android:background="@drawable/news">

        </Button>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </Space>

        <Button
            android:id="@+id/btn_navi3"
            android:layout_width="101dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/profile">

        </Button>



    </LinearLayout>







</androidx.appcompat.widget.LinearLayoutCompat>