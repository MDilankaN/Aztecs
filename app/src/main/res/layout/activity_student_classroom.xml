<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@drawable/background"

    tools:context=".MainActivity">

<!--    Start scrolling view for whole content-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_clsS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/usernameT"
                android:textColor="@color/darkcolor"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:id="@+id/txtcurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Current Classrooms"
                android:textColor="@color/darkcolor"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>




            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <LinearLayout
                    android:id="@+id/Classrooms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Enroll to ClassRoom"
                    android:textColor="@color/darkcolor"
                    android:textSize="27dp"
                    android:textStyle="bold">

                </TextView>

                    <EditText
                        android:id="@+id/codeField"
                        android:hint="Classroom id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/inputid"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/darkcolor"
                        android:paddingStart="10dp">

                    </EditText>

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/btnjoin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btnjoin">

                </Button>
            </LinearLayout>

                <!--Begin bottom tab-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:background="@color/darkcolor"
                    >


                    <Button
                        android:id="@+id/btn_navi1"
                        android:layout_width="171dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/selected">

                    </Button>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </Space>

                    <Button
                        android:id="@+id/btn_navi2"
                        android:layout_width="87dp"
                        android:layout_height="30dp"
                        android:background="@drawable/news">

                    </Button>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                </Space>

                <Button
                    android:id="@+id/btn_navi3"
                    android:layout_width="101dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/profile">

                </Button>
            </LinearLayout>


        </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>