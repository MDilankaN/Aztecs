<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entering_MCQs"
    android:background="@color/solitude">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="Enter Your MCQs"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/picton_blue"/>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="389dp"

        android:layout_height="396dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="389dp"
            android:layout_height="495dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/button"
            tools:layout_editor_absoluteX="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_medium"
                    android:padding="8dp"
                    android:text="MCQ 01"
                    android:textColor="@color/picton_blue"
                    android:textSize="24dp" />

                <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/edit_text"
                    android:hint="Question"
                    android:inputType="textImeMultiLine"
                    android:padding="5dp"
                    android:textSize="22dp" />

                <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/edit_text"
                    android:hint="Answer 1"
                    android:inputType="textImeMultiLine"
                    android:padding="5dp"
                    android:textSize="22dp" />

                <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/edit_text"
                    android:hint="Answer 2"
                    android:inputType="textImeMultiLine"
                    android:padding="5dp"
                    android:textSize="22dp" />

                <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/edit_text"
                    android:hint="Answer 3"
                    android:inputType="textImeMultiLine"
                    android:padding="5dp"
                    android:textSize="22dp" />

                <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/edit_text"
                    android:hint="Answer 4"
                    android:inputType="textImeMultiLine"
                    android:padding="5dp"
                    android:textSize="22dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:fontFamily="@font/raleway_medium"
                        android:paddingVertical="8dp"
                        android:paddingLeft="8dp"
                        android:text="Correct answer's no"
                        android:textColor="@color/picton_blue"
                        android:textSize="22dp" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/edit_text"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textSize="22dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_medium"
                    android:padding="8dp"
                    android:text="MCQ 02"
                    android:textColor="@color/picton_blue"
                    android:textSize="24dp" />

                <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/edit_text"
                    android:hint="Question"
                    android:inputType="textImeMultiLine"
                    android:padding="5dp"
                    android:textSize="22dp" />

                <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/edit_text"
                    android:hint="Answer 1"
                    android:inputType="textImeMultiLine"
                    android:padding="5dp"
                    android:textSize="22dp" />

                <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text"
                    android:hint="Answer 2"
                    android:inputType="textImeMultiLine"
                    android:textSize="22dp" />

                <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/edit_text"
                    android:hint="Answer 3"
                    android:inputType="textImeMultiLine"
                    android:padding="5dp"
                    android:textSize="22dp" />

                <EditText
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/edit_text"
                    android:hint="Answer 4"
                    android:inputType="textImeMultiLine"
                    android:padding="5dp"
                    android:textSize="22dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:fontFamily="@font/raleway_medium"
                        android:paddingVertical="8dp"
                        android:paddingLeft="8dp"
                        android:text="Correct answer's no"
                        android:textColor="@color/picton_blue"
                        android:textSize="22dp" />

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/edit_text"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textSize="22dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="209dp"
        android:layout_height="108dp"
        android:layout_gravity="center"
        android:background="@drawable/button5"
        android:text="Submit"
        android:textColor="@color/White"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>